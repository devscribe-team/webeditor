{
	"name": "@dynote/editor",
	"version": "0.1.0",
	"description": "A rich text editor library for React with markdown support and custom components",
	"author": "",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		},
		"./styles": "./dist/index.css"
	},
	"files": [
		"dist",
		"README.md"
	],
	"scripts": {
		"build:css": "tailwindcss -i ./src/styles.css -o ./dist/tailwind.tmp.css --minify && cat ./dist/index.css ./dist/tailwind.tmp.css > ./dist/index.combined.css && mv ./dist/index.combined.css ./dist/index.css && rm ./dist/tailwind.tmp.css",
		"build": "npx tsdown && npm run build:css",
		"prepublishOnly": "npm run build"
	},
	"peerDependencies": {
		"react": ">=18.0.0",
		"react-dom": ">=18.0.0",
		"tailwindcss": ">=4.0.0"
	},
	"dependencies": {
		"@codemirror/lang-css": "^6.3.1",
