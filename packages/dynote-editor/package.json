		"tailwindcss": "^4.1.12",
		"tsdown": "^0.14.2",
		"typescript": "^5.4.5"
	},
	"keywords": [
		"react",
		"editor",
		"rich-text",
		"markdown",
		"prosemirror",
		"wysiwyg"
	]
}
