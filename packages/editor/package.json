{
	"name": "dynote",
	"version": "0.1.0",
	"description": "A rich text editor library for React with markdown support and custom components",
	"author": "",
	"license": "ISC",
	"type": "module",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		},
		"./styles": "./dist/index.css"
	},
	"files": [
		"dist",
		"README.md"
	],
	"scripts": {
		"build": "bun run build:js && bun run build:types && bun run build:css",
		"build:js": "bun build src/index.ts --outdir dist --format esm --minify --splitting --target browser",
		"build:types": "tsc --emitDeclarationOnly --outDir dist",
		"build:css": "cp src/ui/callout.css dist/index.css",
		"playground:dev": "bun ./src/index.tsx",
		"dev": "bun run build --watch",
		"format": "biome format --write",
		"lint": "biome lint",
		"prepublishOnly": "bun run build"
	},
	"peerDependencies": {
		"react": ">=18.0.0",
		"react-dom": ">=18.0.0"
	},
	"dependencies": {
		"@handlewithcare/react-prosemirror": "^2.4.12",
		"lucide-react": "^0.460.0",
		"prosemirror-commands": "^1.5.2",
		"prosemirror-history": "^1.3.2",
		"prosemirror-inputrules": "^1.2.1",
		"prosemirror-keymap": "^1.2.2",
		"prosemirror-model": "^1.19.4",
		"prosemirror-schema-basic": "^1.2.2",
		"prosemirror-schema-list": "^1.3.0",
		"prosemirror-state": "^1.4.3",
		"prosemirror-transform": "^1.8.0",
		"prosemirror-view": "^1.32.7",
		"prosemirror-markdown": "^1.12.0",
		"gray-matter": "^4.0.3",
		"marked": "^12.0.1"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.2",
		"@types/bun": "^1.2.21",
		"@types/node": "^24.3.0",
		"@types/react": "^18.2.79",
		"@types/react-dom": "^18.2.23",
		"typescript": "^5.4.5"
	},
	"keywords": [
		"react",
		"editor",
		"rich-text",
		"markdown",
		"prosemirror",
		"wysiwyg",
		"next.js"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/yourusername/dynote.git"
	},
	"bugs": {
		"url": "https://github.com/yourusername/dynote/issues"
	},
	"homepage": "https://github.com/yourusername/dynote#readme"
}
